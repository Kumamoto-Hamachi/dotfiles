# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
# EditorConfigは親ディレクトリを遡って設定ファイルを探し、見つかった設定を順次マージしていくが trueにすることで、探索を停止する
root = true

# Unix-style newlines with a newline ending every file
# すべてのファイルに適用される基本設定
[*]
# 改行コードはLF（Unix形式）
end_of_line = lf
# ファイル末尾に改行を挿入
insert_final_newline = true
# 文字エンコーディングはUTF-8
charset = utf-8
# 行末の空白を削除
trim_trailing_whitespace = true

# Shell scripts
[*.{sh,bash}]
# インデントはスペース、幅は2
indent_style = space
indent_size = 2
# シェルの種類はbash
shell_variant = bash
# &&や||を次の行の先頭に配置
binary_next_line = true
# case文の内容をインデント
switch_case_indent = true
# リダイレクト演算子（>、<）の周りにスペース
space_redirects = true
# 余分な空白を削除
keep_padding = false
# 関数定義の{を同じ行に配置
function_next_line = false

# Markdown files
# 行末の空白を保持（改行に必要な場合があるため）
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Vim files
[*.vim]
indent_style = space
indent_size = 2

# Lua files
[*.lua]
indent_style = space
indent_size = 2
